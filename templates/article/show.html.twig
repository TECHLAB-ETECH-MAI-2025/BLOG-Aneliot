{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Article #{{ article.id }} : {{ article.title }}</h5>
            <p class="card-text">{{ article.content }}</p>
            <p class="card-text text-muted">
                Publié le {{ article.createdAt|date('d/m/Y à H:i') }}
            </p>

            <p class="text-muted">
                <strong>Catégories:</strong>
                {% for category in article.categories %}
                    {{ category.title }}{% if not loop.last %}; {% endif %}
                {% endfor %}
            </p>

            <div class="mt-3">
                {% if article.comments|length == 0 %}
                    <p class="text-muted">Aucun commentaire pour le moment.</p>
                {% else %}
                    <h6>Commentaires:</h6>
                    <ul class="list-group mb-2">
                        {% for comment in article.comments %}
                            <li class="list-group-item">
                                {{comment.createdAt|date('d/m/Y à H:i')}}   <strong>{{ comment.author }}:</strong> {{ comment.content }}

                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>

            <hr>
            <h6>Ajouter un commentaire :</h6>
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.author) }}
                    {{ form_widget(form.author) }}
                    {{ form_errors(form.author) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>


                <button class="btn btn-primary">Envoyer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
