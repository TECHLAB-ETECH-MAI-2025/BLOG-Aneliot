{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Tableau de bord d'administration</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Utilisateurs</div>
                <div class="card-body">
                    <h5 class="card-title">{{ userCount }}</h5>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Voir les détails</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Utilisateurs vérifiés</div>
                <div class="card-body">
                    <h5 class="card-title">{{ verifiedCount }}</h5>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Voir les détails</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Administrateurs</div>
                <div class="card-body">
                    <h5 class="card-title">{{ adminCount }}</h5>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Voir les détails</a>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-5">
        <h2>Actions rapides</h2>
        <a href="{{ path('app_admin_users_new') }}" class="btn btn-outline-primary">
            Créer un nouvel utilisateur
        </a>
    </div>
</div>
{% endblock %}
